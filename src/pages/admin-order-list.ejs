          <input
            type="text"
            id="textInput"
            name="textInput"
            class="custom-text-input"
            placeholder=""
          />
        </div>
        <div
          class="dropdown relative w-full --small flex flex-col space-y-2"
          data-type="datepicker"
        >
          <label for="dateStart" class="custom-label">날짜</label>
          <input
            type="date"
            class="dropdown-button --outline"
            id="dateStart"
            aria-haspopup="true"
            aria-expanded="false"
          />

          <div
            id="dropdownContent"
            class="dropdown-content --center md:--right"
            role="menu"
          >
            <ul>
              <li role="menuitem"><a href="#">Link 1</a></li>
              <li role="menuitem"><a href="#">Link 2</a></li>
