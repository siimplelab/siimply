        id="topNavMenu"
        class="/* Layout */ flex absolute lg:static justify-center lg:flex-row flex-col px-4 max-lg:mr-4 max-lg:right-0 pb-4 lg:pb-11 /* Box Model */ z-10 max-lg:shadow-lg /* Spacing */ lg:space-x-4 /* Display */ max-lg:hidden /* Colors and Background */ bg-white"
      >
        <% mainMenuItems.forEach(function (image, index) { %>
        <li>
          <a href="/" class="main-nav-button">
            <div class="thumb-image max-lg:!hidden"><%- image.url %></div>
            <span><%- image.name %></span>
          </a>
        </li>
        <% }) %>
      </ul>
    </nav>
